    "postbuild": "cp dist/styles.*.css styles.css"
  },
  "license": "MIT",
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "pug": "^3.0.0",
    "stylus": "^0.54.8"
  }
}
